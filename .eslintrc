{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "react",
    "jest"
  ],
  "globals": {
    "api": false,
    "assetsPath": true,
    "__static": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "rules": {
    "keyword-spacing": [
      2,
      {
        "before": false, 
        "after": false, 
        "overrides": {
          "import": {"after": true, "before": false},
          "from": {"after": true, "before": true},
          "case": {"after": true, "before": false},
          "else": {"after": true, "before": true},
          "return": {"after": true, "before": true},
          "catch": {"after": false, "before": true}
        }
      }
    ],
    "comma-spacing": [
      2,
      { "before": false, "after": true } 
    ],
    "react/jsx-uses-vars": 2,
    "no-irregular-whitespace": 2,
    "block-spacing": [
      2,
      "always"
    ],
    "no-spaced-func": 2,
    "array-bracket-spacing": [
      2,
      "never"
    ],
    "no-multi-spaces": 2,
    "no-multiple-empty-lines": 2,
    "no-trailing-spaces": 2,
    "accessor-pairs": [
      1,
      {
        "getWithoutSet": true,
        "setWithoutGet": true
      }
    ],
    "no-mixed-spaces-and-tabs": 2,
    "brace-style": 2,
    "no-regex-spaces": 2,
    "no-void": 2,
    "no-useless-call": 2,
    "no-lonely-if": 2,
    "no-nested-ternary": 2,
    "no-new-object": 2,
    "no-useless-concat": 2,
    "radix": 2,
    "no-underscore-dangle": 0,
    "block-scoped-var": 2,
    "no-else-return": 2,
    "space-infix-ops": 2,
    "space-unary-ops": 2,
    "indent": [
      2,4,
      { "SwitchCase": 1 , "VariableDeclarator": 2}
    ],
    "guard-for-in": 2,
    "no-caller": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-invalid-this": 2,
    "no-native-reassign": 2,
    "no-new-func": 2,
    "no-new": 2,
    "no-param-reassign": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-unused-expressions": 2,
    "no-unused-vars": [
      2,
      {"varsIgnorePattern": "debug"}
    ],
    "no-cond-assign": 2,
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty-character-class": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-sparse-arrays": 2,
    "use-isnan": 2,
    "valid-typeof": 2,
    "no-unexpected-multiline": 2,
    "object-curly-spacing": [1, "always"],
    "one-var": [0, "always"],
    "operator-linebreak": [2, "after"],
    "operator-assignment": [2, "always"],
    "quotes": [2, "single"],
    "semi-spacing": [2, {"before": false, "after":true}],
    "space-in-parens": [0, "never"],
    "space-before-blocks": [1, "always"],
    "camelcase": 1,
    "comma-style": [2, "last"],
    "no-self-compare": 2,
    "vars-on-top": 0,
    "wrap-iife": 0,
    "yoda": 2,
    "default-case": 2,
    "no-var": 2,
    "no-const-assign": 2,
    "prefer-const": 2,
    "no-restricted-globals": 2,
    "no-shadow": 2,
    "no-undef": 2,
    "no-use-before-define": ["error", { "functions": false, "classes": true }]
  }
}